{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"],
			"~~/*": ["./*"],
			"@@/*": ["./*"],
			"Images/*": [
				"./assets/images/*"
			],
			"Styles/*": [
				"./assets/styles/*"
			],
			"Components/*": [
				"./components/*"
			],
			"Helpers/*": [
				"./helpers/*"
			],
			"Mixins/*": [
				"./mixins/*"
			],
			"Pages/*": [
				"./pages/*"
			],
			"Plugins/*": [
				"./plugins/*"
			],
			"Utils/*": [
				"./utils/*"
			],
		}
	},
	"exclude": [
		"node_modules",
		".nuxt",
		"dist",
	],
}